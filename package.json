{
  "private": true,
  "name": "h5-umi-best",
  "version": "0.0.1",
  "scripts": {
    "start": "umi dev",
    "build": "umi build",
    "build:report": "ANALYZE=1 umi build",
    "server": "node ./server/server.js",
    "jscpd": "jscpd",
    "postinstall": "umi generate tmp",
    "lint": "npm run lint:js",
    "lint:js": "cross-env TIMING=1 eslint --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./src",
    "lint:css": "stylelint 'src/**/*.less' --syntax less",
    "lint:prettier": "prettier --check 'src/**/*'",
    "lint:fix": "npm run lint:js:fix && npm run lint:css:fix && npm run lint:prettier:fix",
    "lint:js:fix": "eslint --fix --cache --ext .js,.jsx,.ts,.tsx --format=pretty ./src",
    "lint:css:fix": "stylelint --fix 'src/**/*.less' --syntax less",
    "lint:prettier:fix": "prettier -c --write 'src/**/*.{js,jsx,ts,tsx,less,md,json}' && git diff && prettier --version"
  },
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "ahooks": "2.10.9",
    "classnames": "2.3.1",
    "lodash": "4.17.21",
    "react": "17.x",
    "react-dom": "17.x",
    "umi": "^3.5.10",
    "umi-request": "1.4.0"
  },
  "devDependencies": {
    "@deepjs/lint": "0.0.9",
    "@jscpd/badge-reporter": "3.3.23",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "@umijs/preset-react": "1.x",
    "@umijs/test": "^3.5.10",
    "file-loader": "6.2.0",
    "jscpd": "3.3.26",
    "lint-staged": "^11.1.2",
    "postcss-px-to-viewport": "1.1.1",
    "prettier": "^2.4.1",
    "typescript": "^4.4.3",
    "yorkie": "^2.0.0"
  }
}
